<odoo>
    <!-- Vista lista de nóminas -->
    <record id="view_employee_payroll_tree" model="ir.ui.view">
        <field name="name">employee.payroll.list</field>
        <field name="model">employee.payroll</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'paid'" decoration-warning="state == 'confirmed'">
                <field name="employee_id"/>
                <field name="date"/>
                <field name="base_salary"/>
                <field name="gross_salary"/>
                <field name="irpf_percent"/>
                <field name="irpf_amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Vista formulario de nómina -->
    <record id="view_employee_payroll_form" model="ir.ui.view">
        <field name="name">employee.payroll.form</field>
        <field name="model">employee.payroll</field>
        <field name="arch" type="xml">
            <form string="Nómina">
                <header>
                    <button name="action_confirm" type="object"
                            string="Confirmar"
                            class="btn-primary"/>
                    <button name="action_set_paid" type="object"
                            string="Marcar como pagada"
                            class="btn-secondary"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="base_salary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Bonificaciones / Deducciones">
                            <field name="line_ids"/>
                        </page>
                        <page string="IRPF">
                            <group>
                                <field name="irpf_percent"/>
                                <field name="irpf_amount" readonly="1"/>
                            </group>
                        </page>
                        <page string="Totales">
                            <group>
                                <field name="gross_bonus_total" readonly="1"/>
                                <field name="gross_deduction_total" readonly="1"/>
                                <field name="gross_salary" readonly="1"/>
                            </group>
                        </page>
                        <page string="Justificante">
                            <group>
                                <field name="pdf_transfer" filename="pdf_filename"/>
                                <field name="pdf_filename"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción y menú -->
    <record id="action_employee_payroll" model="ir.actions.act_window">
        <field name="name">Nóminas</field>
        <field name="res_model">employee.payroll</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_employee_payroll_root"
              name="Nóminas"
              parent="hr.menu_hr_root"/>
    <menuitem id="menu_employee_payroll"
              name="Nóminas"
              parent="menu_employee_payroll_root"
              action="action_employee_payroll"/>
</odoo>
